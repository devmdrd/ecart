<div
  id="toast"
  role="alert"
  aria-live="assertive"
  aria-atomic="true"
  class="fixed bottom-4 right-4 bg-gray-700 text-white py-2 px-4 rounded-lg shadow-lg opacity-0 transition-opacity duration-300 pointer-events-none z-50 max-w-xs"
></div>

<script>
  const toast = document.getElementById("toast");
  let toastTimeout;

  function showToast(message, isSuccess = true) {
    clearTimeout(toastTimeout);
    
    toast.className = "fixed bottom-4 right-4 text-white py-2 px-4 rounded-lg shadow-lg transition-opacity duration-300 pointer-events-none z-50 max-w-xs";
    
    toast.textContent = message;
    toast.classList.add(isSuccess ? "bg-green-500" : "bg-red-500");
    
    toast.classList.remove("opacity-0");
    toast.classList.add("opacity-100");
    
    toastTimeout = setTimeout(() => {
      toast.classList.remove("opacity-100");
      toast.classList.add("opacity-0");
    }, 2500);
  }
</script>