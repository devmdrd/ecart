<div class="container mt-5">
  <h3 class="text-2xl font-semibold mb-5">List Brands</h3>

  <div class="overflow-x-auto rounded-lg">
    <table id="example" class="min-w-full text-left table-auto">
      <thead>
        <tr>
          <th class="px-4 py-2 font-medium text-sm">No</th>
          <th class="px-4 py-2 font-medium text-sm">Image</th> 
          <th class="px-4 py-2 font-medium text-sm">Name</th>
          <th class="px-4 py-2 font-medium text-sm">Category</th>
          <th class="px-4 py-2 font-medium text-sm">Description</th>
          <th class="px-4 py-2 font-medium text-sm">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% brands.forEach((brand, index) => { %>
          <tr class="border-b">
            <td class="px-4 py-2"><%= index + 1 %></td>
            <td class="px-4 py-2">
              <img 
                src="<%= brand.logo ? '/' + brand.logo : '' %>" 
                alt="Brand Image" 
                class="w-20 h-20 object-cover rounded-md" />
            </td>
            <td class="px-4 py-2"><%= brand.name %></td>
            <td class="px-4 py-2"><%= brand.category ? brand.category.name : 'No Category' %></td>
            <td class="px-4 py-2"><%= brand.description %></td>
            <td class="px-4 py-2">
              <div class="flex gap-2">
                <!-- Edit icon -->
                <a href="/admin/brands/manage/<%= brand._id %>" class="px-3 py-1 rounded-md border text-black" title="Edit">
                  <i class="fas fa-edit"></i>
                </a>
                
                <!-- Delete icon -->
                <button class="px-3 py-1 rounded-md border text-red-600" title="Delete" onclick="openDeleteModal('<%= brand._id %>')">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<!-- Confirmation Modal -->
<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
  <div class="bg-white p-6 rounded-lg w-96">
    <h4 class="text-xl font-semibold mb-4">Confirm Deletion</h4>
    <p>Are you sure you want to delete this brand?</p>
    <div class="mt-4 flex justify-end gap-4">
      <button id="cancelDelete" class="px-4 py-2 bg-gray-300 rounded-md">Cancel</button>
      <button id="confirmDelete" class="px-4 py-2 bg-red-600 text-white rounded-md">Delete</button>
    </div>
  </div>
</div>

<!-- Toast Notification -->
<div id="toast" class="fixed bottom-6 right-6 bg-gray-800 text-white py-3 px-6 rounded-lg shadow-lg opacity-0 transition-opacity duration-500 pointer-events-none"></div>

<script>
  let brandIdToDelete = null;

  function openDeleteModal(brandId) {
    brandIdToDelete = brandId;
    document.getElementById("deleteModal").classList.remove("hidden");
  }

  document.getElementById("cancelDelete").addEventListener("click", () => {
    document.getElementById("deleteModal").classList.add("hidden");
  });

  async function showToast(message, isSuccess = true) {
    const toast = document.getElementById("toast");
    toast.textContent = message;
    toast.classList.remove("opacity-0");
    toast.classList.add("opacity-100");
    toast.classList.add(isSuccess ? "bg-green-600" : "bg-red-600");

    setTimeout(() => {
      toast.classList.remove("opacity-100");
      toast.classList.add("opacity-0");
    }, 2500);
  }

  document.getElementById("confirmDelete").addEventListener("click", async () => {
    if (brandIdToDelete) {
      try {
        const response = await fetch(`/admin/brands/${brandIdToDelete}`, {
          method: 'DELETE',
        });

        const result = await response.json();
        if (result.success) {
          showToast(result.message, true); 
          setTimeout(() => {
            window.location.reload(); 
          }, 2000);
        } else {
          showToast(result.message, false); 
        }
      } catch (error) {
        console.error("Error deleting brand:", error);
        showToast("An error occurred while deleting the brand.", false);
      }
    }
    document.getElementById("deleteModal").classList.add("hidden");
  });
</script>
