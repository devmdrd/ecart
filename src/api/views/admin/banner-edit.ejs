<main id="main" class="main">
  <div class="pagetitle m-5">
    <h1>Edit Banner</h1>
  </div>
  <!-- End Page Title -->

  <section class="container">
    <div class="row">
      <div class="col-lg-10">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"></h5>
            <!-- Floating Labels Form -->
            <div class="row">
              <div class="col-md-12 card mb-3">
                <img
                  class="card-img-top"
                  src="/<%- banner.image %>"
                  style="width: 25%; height: 150px; object-fit: cover"
                  alt="Card image cap"
                />
              </div>
              <!-- <div class="col-md-4">
                                <div class=" col-md-8 card mb-3 ">
                                    <img class="card-img-top" src=""
                                        alt="Card image cap">
                                </div>
                            </div> -->
            </div>
            <form
              class="row g-3"
              action=""
              method="post"
              enctype="multipart/form-data"
            >
              <div class="col-md-12">
                <div class="form-floating">
                  <input
                    name="title"
                    type="text"
                    class="form-control"
                    id="title"
                    value="<%- banner.title %>"
                    placeholder="State"
                  />
                  <label for="title">Enter Banner Title</label>
                </div>
              </div>
              <div class="col-12">
                <div class="form-floating">
                  <textarea
                    name="description"
                    class="form-control"
                    placeholder="Address"
                    id="floatingTextarea"
                    style="height: 100px"
                  >
<%- banner.description %></textarea
                  >
                  <label for="description">Enter Banner Description</label>
                </div>
              </div>
              <!-- <div class="row mb-3 mt-5">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Large Device</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="file" name="largeImg" id="formFile" >
                                </div>
                            </div> -->
              <div class="col-12">
                <label for="image" class="col-sm-2 col-form-label"
                  >Banner Image</label
                >
                <div class="col-sm-10">
                  <input
                    class="form-control"
                    type="file"
                    name="image"
                    id="image"
                  />
                </div>
              </div>
              <div class="text-center">
               
                <button type="reset" class="btn btn-danger btn-sm">
                  Reset
                </button>
                <button type="submit" class="btn btn-success btn-sm">
                  Submit
                </button>
              </div>
            </form>
            <!-- End floating Labels Form -->
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
