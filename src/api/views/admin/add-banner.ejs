<main id="main" class="main">
    <div class="pagetitle">
        <h1>Add Banner</h1>
        
    </div><!-- End Page Title -->

    <section class="container w-50">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Banner Add Form</h5>

                        <!-- Floating Labels Form -->
                        <form class="row g-3" action="/admin/add-banner" method="POST" enctype="multipart/form-data">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input name="title" type="text" class="form-control" id="title"
                                        placeholder="Banner Title">
                                    <label for="floatingName">Banner Title</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <textarea name="description" class="form-control" placeholder="Banner Description"
                                        id="description" style="height: 100px;"></textarea>
                                    <label for="description">Banner Description</label>
                                </div>
                            </div>
                            <div class="row mb-4 mt-5">
                                <label for="image" class="col-sm-2 col-form-label">Banner Image</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="file" name="image" id="image" accept="image/*" required>
                                </div>
                            </div>
                            <!-- <div class="row mb-4">
                                <label for="smallImg" class="col-sm-2 col-form-label">Small Device</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="file" name="smallImg" id="smallImg" accept="image/*" required>
                                </div>
                            </div> -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <button type="reset" class="btn btn-secondary">Reset</button>
                                <a href="/admin/add-banner" class="btn btn-primary">Back</a>
                            </div>
                        </form><!-- End floating Labels Form -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
