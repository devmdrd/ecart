<div class="mt-4 w-1/3 mx-auto border border-gray-300 p-6 rounded-lg shadow-lg">
  <h4 class="font-bold text-2xl mb-4 text-center"><%= banner ? 'Edit Banner' : 'Add Banner' %></h4>

  <form id="bannerForm" enctype="multipart/form-data">
    <% if (banner) { %>
      <input type="hidden" name="bannerId" value="<%= banner._id %>">
    <% } %>

    <div class="mb-4">
      <label for="title" class="block text-lg font-semibold text-gray-700">Title</label>
      <input type="text" id="title" name="title" value="<%= banner?.title || '' %>" class="mt-2 w-full px-4 py-2 border rounded-lg" required>
    </div>

    <div class="mb-4">
      <label for="description" class="block text-lg font-semibold text-gray-700">Description</label>
      <textarea id="description" name="description" class="mt-2 w-full px-4 py-2 border rounded-lg" rows="3"><%= banner?.description || '' %></textarea>
    </div>

    <div class="mb-4">
      <label for="categoryId" class="block text-lg font-semibold text-gray-700">Category</label>
      <select name="categoryId" id="categoryId" required class="mt-2 w-full px-4 py-2 border rounded-lg">
        <% if (!banner) { %>
          <option disabled selected value="">-- Select a category --</option>
        <% } %>
        <% categories.forEach(cat => { %>
          <option value="<%= cat._id %>" <%= String(banner?.categoryId) === String(cat._id) ? 'selected' : '' %>><%= cat.name %></option>
        <% }) %>
      </select>
    </div>

    <div class="mb-4">
      <label for="image" class="block text-lg font-semibold text-gray-700">Image</label>
      <input type="file" id="image" name="image" accept="image/*" class="w-full border rounded-lg p-2">
      <div class="mt-4">
        <img id="imageDisplay" src="<%= banner?.image ? '/' + banner.image : '#' %>" alt="Banner Image" class="w-28 h-28 object-cover rounded-md border <%= banner?.image ? '' : 'hidden' %>" />
      </div>
    </div>

    <button type="submit" class="w-full py-3 bg-gray-800 text-white rounded-lg hover:bg-gray-700">Save</button>
  </form>
</div>

<div id="toast" class="fixed bottom-6 right-6 bg-gray-800 text-white py-3 px-6 rounded-lg shadow-lg opacity-0 transition-opacity duration-500 pointer-events-none"></div>

<script>
  const imageInput = document.getElementById("image");
  const imageDisplay = document.getElementById("imageDisplay");

  imageInput.addEventListener("change", () => {
    const file = imageInput.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = (e) => {
        imageDisplay.src = e.target.result;
        imageDisplay.classList.remove("hidden");
      };
      reader.readAsDataURL(file);
    }
  });

  const toast = document.getElementById("toast");

  function showToast(message, isSuccess = true) {
    toast.textContent = message;
    toast.classList.remove("opacity-0");
    toast.classList.add("opacity-100", isSuccess ? "bg-green-600" : "bg-red-600");
    setTimeout(() => toast.classList.add("opacity-0"), 2500);
  }

  document.getElementById("bannerForm").addEventListener("submit", async (e) => {
    e.preventDefault();

    const form = e.target;
    const formData = new FormData();

    const title = form.title?.value.trim();
    const description = form.description?.value.trim();
    const categoryId = form.categoryId?.value;
    const image = form.image?.files[0]; 
    const bannerId = form.bannerId?.value;

    if (bannerId) formData.append("bannerId", bannerId);
    if (title) formData.append("title", title);
    if (description) formData.append("description", description);
    if (categoryId) formData.append("categoryId", categoryId);
    if (image) formData.append("image", image);

    const endpoint = "/admin/banners";
    const method = bannerId ? "PUT" : "POST";

    try {
      const res = await fetch(endpoint, {
        method,
        body: formData,
      });

      const result = await res.json();
      showToast(result.message, result.success);

      if (result.success) {
        setTimeout(() => {
          window.location.href = "/admin/banners";
        }, 2000);
      }
    } catch (err) {
      console.error("Error submitting banner form:", err);
      showToast("Something went wrong!", false);
    }
  });
</script>
