<div class="m-5">
  <p>
    Upload Main Banners here. Need to upload Mobile version and Desktop
    versions.
    <a href="/admin/add-banner" class="btn btn-primary btn-sm">Add New</a>
  </p>
</div>
<hr />

<!--sample  -->
<section class="container">
  <div class="container" style="padding-top: 0">
    <% banners.forEach((banners)=>{ %>
    <div
      class="col-lg-4 col-md-4 col-sm-6 col-xs-12 pod"
      url="#"
      style="width: 500px; height: auto; padding: 5px"
    >
      <div class="hover-offer ehover1">
        <img
          class="img-responsive"
          src="/<%= banners.image %>"
          style="width: 100%; height: 250px; object-fit: cover"
          alt="<%= banners.title %>"
        />
        <div class="offer-content">
          <figcaption>
            <h4><%= banners.title %></h4>
            <p class="detail"><%= banners.description %></p>
            <a
              class="btn btn-info btn-sm text-light"
              href="/admin/edit-banner/<%= banners._id %>"
              >Edit this banner</a
            >
            <button
              class="btn btn-danger btn-sm text-light"
              onclick="deleteBanner('<%= banners._id %>')"
            >
              Delete banner
            </button>
          </figcaption>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</section>

<script>
  function deleteBanner(bannerId) { 
  $.ajax({
    url: "/admin/delete-banner/" + bannerId,
    success: function (result) {
      console.log(result);
      window.location.reload();
    },
    error: function (err) {
      console.log(err);
    },
    
  });
}
</script>
